@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@model BaSalesManagementApp.MVC.Models.CompanyVMs.CompanyDetailsVM

@{
    ViewData["Title"] = @localizer["CompanyDetails"];
}


<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@Html.Raw(localizer["Company"]) /</span> @Html.Raw(localizer["Details"])
        </h4>

        <!-- Tab Menüsü -->
        <ul class="nav nav-tabs justify-content-end" id="companyDetailsTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="address-tab" data-bs-toggle="tab" data-bs-target="#address" type="button" role="tab" aria-controls="address" aria-selected="true">
                    @localizer["Address"]
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="companyInfo-tab" data-bs-toggle="tab" data-bs-target="#companyInfo" type="button" role="tab" aria-controls="companyInfo" aria-selected="false">
                    @localizer["Company"]
                </button>
            </li>
        </ul>

        <!-- Tab İçeriği -->
        <div class="tab-content" id="companyDetailsTabsContent">
            <!-- Adres Bilgileri Tabı -->
            <div class="tab-pane fade show active" id="address" role="tabpanel" aria-labelledby="address-tab">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@localizer["Address"]</h5>
                        <dl class="row">
                            <dt class="col-sm-4 mb-4">@localizer["CountryName"]</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CountryName)</dd>
                            <dt class="col-sm-4 mb-4">@localizer["CityName"]</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CityName)</dd>
                            <dt class="col-sm-4 mb-4">@localizer["Address"]</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Şirket Bilgileri Tabı -->
            <div class="tab-pane fade" id="companyInfo" role="tabpanel" aria-labelledby="companyInfo-tab">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@localizer["Company"]</h5>
                        <dl class="row">
                            <dt class="col-sm-4 mb-4">@localizer["CompanyName"]</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                            <dt class="col-sm-4 mb-4">@localizer["Address"]</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                            <dt class="col-sm-4 mb-4">@localizer["CompanyPhone"]</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer" style="margin-top:-50px">
            <a href="@Url.Action("Update", new { companyId = Model.Id })" class="btn btn-primary">@localizer["Update"]</a>
            <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
        </div>
    </div>
</div>




