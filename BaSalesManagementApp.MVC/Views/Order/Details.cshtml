@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer
@model OrderDetailsVM

@{
    ViewData["Title"] = localizer["OrderDetails"];
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">@localizer["Order"] /</span> @localizer["Details"]</h4>


        <ul class="nav nav-tabs justify-content-end" id="orderDetailsTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="order-tab" data-bs-toggle="tab" data-bs-target="#order" type="button" role="tab" aria-controls="order" aria-selected="true">
                    @localizer["Order"]
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="addedBy-tab" data-bs-toggle="tab" data-bs-target="#addedBy" type="button" role="tab" aria-controls="addedBy" aria-selected="false">
                    @localizer["Added_By"]
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="company-tab" data-bs-toggle="tab" data-bs-target="#company" type="button" role="tab" aria-controls="company" aria-selected="false">
                    @localizer["Company"]
                </button>
            </li>
        </ul>

        <div class="tab-content" id="orderDetailsTabsContent">

            <div class="tab-pane fade show active" id="order" role="tabpanel" aria-labelledby="order-tab">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@localizer["Order"]</h5>
                        <dl class="row">
                            <dt class="col-4 mb-4">@localizer["Quantity"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Quantity)</dd>
                            <dt class="col-4 mb-4">@localizer["TotalPrice"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.TotalPrice)</dd>
                            <dt class="col-4 mb-4">@localizer["OrderDate"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.OrderDate)</dd>
                            <dt class="col-4 mb-4">
                                @localizer["IsActive"]
                            </dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <i class="fas fa-check text-primary"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times text-danger"></i>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>


            <div class="tab-pane fade" id="addedBy" role="tabpanel" aria-labelledby="addedBy-tab">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@localizer["Added_By"]</h5>
                        <dl class="row">
                            <dt class="col-4 mb-4">@localizer["FirstName"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Admin.FirstName)</dd>
                            <dt class="col-4 mb-4">@localizer["LastName"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Admin.LastName)</dd>
                            <dt class="col-4 mb-4">@localizer["Email"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Admin.Email)</dd>
                        </dl>
                    </div>
                </div>
            </div>


            <div class="tab-pane fade" id="company" role="tabpanel" aria-labelledby="company-tab">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@localizer["Company"]</h5>
                        <dl class="row">
                            <dt class="col-4 mb-4">@localizer["CompanyName"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Company.Name)</dd>
                            <dt class="col-4 mb-4">@localizer["CompanyAddress"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Company.Address)</dd>
                            <dt class="col-4 mb-4">@localizer["CompanyPhone"]</dt>
                            <dd class="col-8">@Html.DisplayFor(model => model.Company.Phone)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer mt-4">
            <a href="@Url.Action("Update", new { orderId = Model.Id })" class="btn btn-primary">@localizer["Update"]</a>
            <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
        </div>
    </div>
</div>
